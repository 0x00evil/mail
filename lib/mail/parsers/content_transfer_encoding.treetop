module Mail
  grammar ContentTransferEncoding

    include RFC2822
    include RFC2045

    rule primary
      CFWS encoding CFWS ";"? CFWS
    end
    
    rule encoding
      (ietf_token / x_token) {
        def encoding
          ietf_token.text_value || x_token.text_value
        end
      }
    end
    
    rule ietf_token
      "7bit" / "8bit" / "binary" /
      "quoted-printable" / "base64"
    end
    
  end
end