module Mail

  grammar SplitElements

    include SplitCommon
    include SplitAddress
    
    rule elements
      items*
    end
    
    rule items
      mailbox / group
    end

    rule mailbox
      address
    end

    rule group
      display_name_string ":" (mailbox_list / CFWS)* ";" CFWS?
    end

    rule mailbox_list
      (mailbox ("," mailbox)*)*
    end
    
  end
end